# Variables de Entorno - Sistema de Facturación Electrónica

## Configuración de Base de Datos Oracle
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_DATABASE=XE
ORACLE_USERNAME=facturas_user
ORACLE_PASSWORD=facturas_pass

# Para servicio de Clientes
ORACLE_USERNAME_CLIENTES=clientes_user
ORACLE_PASSWORD_CLIENTES=clientes_pass

## Configuración de MongoDB
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=audit_db
MONGODB_USERNAME=audit_user
MONGODB_PASSWORD=audit_pass

## URLs de Servicios
CLIENTES_SERVICE_URL=http://localhost:3001
AUDIT_SERVICE_URL=http://localhost:3002
FACTURAS_SERVICE_URL=http://localhost:5000

## Configuración de Rails
RAILS_ENV=development
RAILS_SERVE_STATIC_FILES=true
RAILS_LOG_TO_STDOUT=true

## Configuración de .NET
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:80

## Configuración de Docker
COMPOSE_PROJECT_NAME=facturacion
DOCKER_BUILDKIT=1

## Configuración de Logs
LOG_LEVEL=INFO
LOG_FORMAT=json

## Configuración de Seguridad
JWT_SECRET_KEY=your-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

## Configuración de Monitoreo
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true

## Configuración de CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

## Configuración de Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

## Configuración de Timeouts
HTTP_TIMEOUT_SECONDS=30
DATABASE_TIMEOUT_SECONDS=10
REDIS_TIMEOUT_SECONDS=5

## Configuración de Retry
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000
CIRCUIT_BREAKER_THRESHOLD=5

## Configuración de Auditoría
AUDIT_RETENTION_DAYS=365
AUDIT_BATCH_SIZE=100
AUDIT_FLUSH_INTERVAL_SECONDS=30

## Configuración de Notificaciones
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@factumarket.com

## Configuración de Integración DIAN (Futuro)
DIAN_API_URL=https://api.dian.gov.co
DIAN_API_KEY=your-dian-api-key
DIAN_ENVIRONMENT=sandbox

## Configuración de Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

## Configuración de Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_TTL_SECONDS=3600

## Configuración de Archivos
UPLOAD_MAX_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,jpg,png,doc,docx
STORAGE_PATH=/uploads

## Configuración de Desarrollo
DEBUG_MODE=true
VERBOSE_LOGGING=true
MOCK_EXTERNAL_SERVICES=false
